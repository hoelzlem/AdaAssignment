project Pfc_Psu is

   for Source_Dirs use ("src");
   for Object_Dir use "obj";
   for Main use ("main.adb");

   package Compiler is
      for Switches ("ada") use ("-gnatyyy", "-gnatwa.n", "-gnatf", "-gnato", "-gnata", "-gnatVa", "-gnatyyyM500");
   end Compiler;

   package Linker is
      for Switches ("ada") use ("-fprofile-generate", "-fprofile-generate");
   end Linker;

end Pfc_Psu;

